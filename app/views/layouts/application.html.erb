<!DOCTYPE html>
<html>
  <head>
    <title>FortApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <!--navbar-->
  <div class= "container">
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
          <p>Brand</p>
        </a>
        </div>
        <%= link_to 'Home', pages_home_path, class:"btn btn-default" %>
        <%= link_to 'About', pages_about_path, class:"btn btn-default" %>
        <%= link_to 'Product', products_path, class:"btn btn-default" %>
      </div>
    </nav>
  </div>
  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
